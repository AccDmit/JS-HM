                        break;
                    case 9: console.log ('September');
                        break;
                    case 10: console.log ('October');
                        break;
                    case 11: console.log ('November');
                        break;
                    case 12: console.log ('December');
                        break;
                    default: console.log ('Not a month')
                        break
                        
